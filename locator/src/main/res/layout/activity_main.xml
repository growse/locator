<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:id="@+id/location_title"
        android:layout_width="fill_parent" android:layout_height="wrap_content" />

    <TableLayout android:id="@+id/location_table"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>
            <TextView android:layout_column="1" android:text="Timestamp"
                android:padding="3dip" />
            <TextView android:id="@+id/location_timestamp"
                android:gravity="right" android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView android:layout_column="1" android:text="Latitude"
                android:padding="3dip" />
            <TextView android:id="@+id/location_latitude"
                android:gravity="right" android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView android:layout_column="1" android:text="Longitude"
                android:padding="3dip" />
            <TextView android:id="@+id/location_longitude"
                android:gravity="right" android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView android:layout_column="1" android:text="Accuracy"
                android:padding="3dip" />
            <TextView android:id="@+id/location_accuracy"
                android:gravity="right" android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView android:layout_column="1" android:text="Speed"
                      android:padding="3dip" />
            <TextView android:id="@+id/location_speed"
                      android:gravity="right" android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView android:layout_column="1" android:text="Last Posted"
                android:padding="3dip" />
            <TextView android:id="@+id/last_posted"
                android:gravity="right" android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView android:layout_column="1" android:text="Pending locations"
                      android:padding="3dip" />
            <TextView android:id="@+id/pending_locations"
                      android:gravity="right" android:padding="3dip" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal" android:layout_width="fill_parent" android:gravity="center"
        android:layout_height="wrap_content">
        <Button android:id="@+id/refresh"
            android:layout_width="0dp" android:layout_weight="1" android:layout_margin="5dp"
            android:layout_height="wrap_content" android:text="Refresh" />
    </LinearLayout>

</LinearLayout>